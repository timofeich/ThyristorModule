                </TextBox>
                
                <TextBlock TextWrapping="Wrap" Margin="0,4,0,0" Height="35" VerticalAlignment="Top" HorizontalAlignment="Left" Width="86" Grid.Row="1"><Run Text="Время"/><Run Text=" "/><Run Text="Kz2 ="/></TextBlock>
                <TextBox HorizontalAlignment="Left"  Text="{Binding Source={x:Static p:Settings.Default}, Path=VremiaKzMs2, Mode=TwoWay}" Height="22" Margin="0,4,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="41" Grid.Column="1" Grid.Row="1"/>
                <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="0,4,0,0" Grid.Row="1" TextWrapping="Wrap" Text="мс" VerticalAlignment="Top" Height="19" Width="22"/>

