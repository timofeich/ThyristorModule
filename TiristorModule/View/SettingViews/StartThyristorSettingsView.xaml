                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="35*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <TextBlock TextWrapping="Wrap" Text="Время:" Margin="21,10,0,0"/>
                
