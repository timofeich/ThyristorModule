            </Grid>
        </GroupBox>
        
        <GroupBox Header="Параметры Kz1" FontSize="14" Background="White" HorizontalAlignment="Left" Height="123" Margin="11,98,0,0" VerticalAlignment="Top" Width="197">
            <Grid Margin="0,0,-2,3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" MinWidth="84"/>
                    <ColumnDefinition Width="44*"/>
                    <ColumnDefinition Width="59*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock TextWrapping="Wrap" Text="Ток Kz1 =" Margin="17,10,0,1"/>
                <TextBox x:Name="Kz1Amperage" HorizontalAlignment="Left" Validation.ErrorTemplate="{StaticResource validationFailed}"  Height="22" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" Grid.Column="1">
                    <TextBox.Text>
                        <Binding Source="{x:Static p:Settings.Default}" Path="CurrentKz1" Mode="TwoWay" 
                                 NotifyOnValidationError="True" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <local:KZApmerageRule/>
                                <ExceptionValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <TextBlock TextWrapping="Wrap" Text="Время Kz1 =" Margin="0,4,0,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="82" Grid.Row="1"/>
                <TextBox HorizontalAlignment="Left"  Text="{Binding Source={x:Static p:Settings.Default}, Path=VremiaKzMs1, Mode=TwoWay }" Height="23" Margin="0,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="41" Grid.Column="1" Grid.Row="1"/>
                <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="1,4,0,0" TextWrapping="Wrap" Text="мс" VerticalAlignment="Top" Height="20" Width="22" Grid.Row="1"/>

            </Grid>
        </GroupBox>
        <GroupBox FontSize="14" Header="Параметры Kz2" Background="White" HorizontalAlignment="Left" Height="123" Margin="258,98,0,0" VerticalAlignment="Top" Width="204">
