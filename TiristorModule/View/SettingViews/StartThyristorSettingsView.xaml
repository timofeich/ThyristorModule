                    <ColumnDefinition Width="auto" MinWidth="91"/>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
